<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ui_control">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"

        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.Learn"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".customView.MainActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".customView.SurfaceViewActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".customView.CustomDrawViewActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".customView.FindMeActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".customView.CustomViewActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>